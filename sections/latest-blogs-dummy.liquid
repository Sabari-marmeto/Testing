{{ "latest-blogs.css" |  asset_url |  stylesheet_tag }}


<div class="bg-container  color-{{ section.settings.section_color_scheme }}">
    <h1 class="head">{{ section.settings.blogs }}</h1>
    <div class="card-container">
        
    {% for block in section.blocks  %} 
        <div class="separate-card ">
            <div>
                <img src="{{ block.settings.card-image |  image_url }}" class="image-width " alt="No image selected">
            </div>
            <div>
                <p class="card-head">{{ block.settings.card-text |  strip_html }}</p>
                <p>{{ block.settings.card-description }}</p>
                <p>{{ block.settings.YY-DD }}</p>
            </div>
        </div>

    {% endfor %}
    </div>
</div>